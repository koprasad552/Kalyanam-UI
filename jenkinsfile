pipeline {
    agent {
        docker {
            image 'node:6-alpine'
            args '-p 3000:3000'
        }
    }
    environment {
        CI = 'true'
    }
    stages {
        stage('gitcheckout'){
            step {
              git 'https://github.com/koprasad552/Kalyanam-UI.git'
              }
        }      
        stage('Build') {
            steps {
                sh 'npm install'
            }
        }
         stage('code status'){
             steps {
                withSonarQubeEnv {
               sh "./home clean sonarqube"
            }
        }
    }
}
